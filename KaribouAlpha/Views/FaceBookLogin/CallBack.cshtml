
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cervitt</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/normalize.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/bootstrap.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/main.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/font-awesome.min.css")" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans" />
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/css/crevitt-font.css")">
    <style>
        html, body {
            height: 100%;
        }
    </style>

    <script type="text/javascript">
        function CallBackLoad() {
            var haslocalaccount = '@ViewBag.haslocalaccount';
            var hascervituser = '@ViewBag.hascervituser';
            var provider = '@ViewBag.provider';
            var external_user_name = '@ViewBag.external_user_name';
            var external_access_token ='@ViewBag.external_access_token';
            var obj = new Object();
            obj.haslocalaccount = haslocalaccount;
            obj.hascervituser = hascervituser;
            obj.email = '@ViewBag.email';
            obj.provider = provider;
            obj.external_user_name = external_user_name;
            obj.external_access_token = external_access_token;
            window.opener.$windowScope.facebookAuthenticationCompletedCallback(obj);
            window.close();
        }
    </script>
</head>

@if (ViewBag.EmailError)
{
    <body>
        <div class="container-fluid home-bg">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-4 regestration-section">
                    <div class="registration-box">
                        <div class="registration-boxInner text-center">
                            <form name="myForm" class="form-horizontal" novalidate>
                                <div class="col-sm-12 custom_msg_form">
                                    <div class="error" ng-show="Error">
                                        <i class="fa fa-exclamation-triangle"></i>&nbsp;Facebook user has not setup an email address. Cannot proceed with login.
                                    </div>
                                    <button type="button" class="onboarding-start wid_auto" onclick="window.close();">Close</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}
else
{
    <body onload="CallBackLoad()">
        <div>Processing....</div>
        }
    </body>
}
</html>
